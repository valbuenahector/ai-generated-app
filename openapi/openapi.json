{
  "openapi": "3.0.3",
  "info": {
    "title": "Vibe Coding Lab API",
    "description": "API for exploring Vibe Coding concepts for AppWorld 2026 Lab.",
    "version": "0.2.0"
  },
  "servers": [
    {
      "url": "http://localhost:5001",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/status": {
      "get": {
        "summary": "Get API status",
        "description": "Returns the current status and version of the API.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "version": { "type": "string" },
                    "module": { "type": "string" },
                    "description": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/vibe-coding": {
      "get": {
        "summary": "Get Vibe Coding definition",
        "description": "Returns a definition and history of Vibe Coding from the documentation.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "topic": { "type": "string" },
                    "content": { "type": "string" },
                    "source": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/ai-assisted-coding": {
      "get": {
        "summary": "Get AI-assisted coding tools",
        "description": "Returns information about popular AI-assisted coding tools and platforms.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "topic": { "type": "string" },
                    "content": { "type": "string" },
                    "source": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
